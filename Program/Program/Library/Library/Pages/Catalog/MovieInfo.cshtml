@page
@model Library.Pages.Catalog.MovieInfoModel
@{
    Layout = "Theme/_ManagementLayout";
}

@section backButton{
<a asp-area="" asp-page="./Movies">< Go back</a>
}

@section textSidebar{
        <p> movie ISBN: @Model.movie.GetISBN()</p>
        <p>movie demographic: @Model.movie.GetDemographic()</p>
        <p>movie rent cost: @Model.movie.GetCost()</p>
        <p>movie genres:</p>
        <p>@foreach(var genre in Model.movie.GetGenre()){
            @:[
            genre.GetName();
            @:]&ensp; 
        }
        </p>
        <p>Language: @Model.movie.GetLanguage() </p>
        <p>Producer: @Model.movie.GetProducer() </p>
        <p>Subtitle(s): @Model.movie.GetSubTitle()</p>
        <p>Duration of the movie: @Model.movie.GetTime()</p>
}
@section middleTitle{
<h3>@Model.movie.GetName()</h3>
}  
 
<p>
@Model.movie.GetDescription()
</p>

@section footer{
<div class="btn-infomain">
    <a asp-area="" asp-page="./Reservation" asp-route-id="@Model.movie.GetID()">Reserve</a>
 </div>
}